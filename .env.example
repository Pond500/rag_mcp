# Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment
ENV=development
DEBUG=false
LOG_LEVEL=INFO

# Qdrant Configuration
QDRANT__HOST=localhost
QDRANT__PORT=6333
QDRANT__TIMEOUT=30

# Embedding Model
EMBEDDING__MODEL_NAME=BAAI/bge-m3
EMBEDDING__DIMENSION=1024
EMBEDDING__DEVICE=cpu
EMBEDDING__BATCH_SIZE=32

# Sparse Embedding (BM25)
SPARSE_EMBEDDING__MODEL_NAME=Qdrant/bm25

# Reranker Model
RERANKER__MODEL_NAME=BAAI/bge-reranker-v2-m3
RERANKER__DEVICE=cpu
RERANKER__BATCH_SIZE=32

# LLM Configuration
LLM__MODEL_NAME=gpt-4o-mini
LLM__API_KEY=your-openai-api-key-here
LLM__BASE_URL=
LLM__TEMPERATURE=0.7
LLM__MAX_TOKENS=1500

# Search Configuration
SEARCH__TOP_K=5
SEARCH__SEARCH_LIMIT_MULTIPLIER=2
SEARCH__RRF_K=60
SEARCH__RERANK_THRESHOLD=0.0

# Document Processing
DOCUMENT__CHUNK_SIZE=1000
DOCUMENT__CHUNK_OVERLAP=200
DOCUMENT__MAX_FILE_SIZE_MB=50

# Chat Configuration
CHAT__MEMORY_TOKEN_LIMIT=3000
CHAT__SYSTEM_PROMPT=

# OpenAI API Key (alternative to LLM__API_KEY)
OPENAI_API_KEY=your-openai-api-key-here
